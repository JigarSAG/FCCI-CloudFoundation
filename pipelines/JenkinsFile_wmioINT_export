#!/usr/bin/env groovy

pipeline 
{
    agent any 
    environment 
	{
	// initialize the variables
		branch="${branchName}"
		apis = ""
 	}

    stages 
	{
	 stage('Initialize Repo')
	  {  
	   steps 
		{
		  script {
			iPaasEnv = "wmioINT"
			wmioenv = "DEV"
			echo "${iPaasEnv}"
			echo "configs/${iPaasEnv}/${wmioenv}.yml"
			
			source_environment_hostname = sh ( returnStdout: true, script: '''cat FCCI-CloudFoundation/configs/${iPaasEnv}/${wmioenv}.yml | grep -i hostname | cut -d '"' -f2 ''' ).trim()
	
			}
			
		echo "${source_environment_hostname}"
		
		
		}
	   }
	  }

	
		
 }
